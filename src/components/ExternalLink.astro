---
import { cn } from "../utils/cn";

type Props = {
  href?: string;
  emphasize?: boolean;
  class?: string;
};

const { href, emphasize, class: classNames } = Astro.props;
---

<a
  href={href}
  rel="noopener noreferrer"
  target="_blank"
  class={cn(
    "inline-flex",
    "items-center",
    "gap-0.5",
    "shrink-0",
    emphasize && "font-bold",
    classNames,
  )}
>
  <slot />
</a>
